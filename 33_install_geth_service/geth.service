[Unit]
Description=Ethereum Execution Client
After=network.target 
Wants=network.target

[Service]
User=geth
Group=geth
Type=simple
Restart=always
RestartSec=5
TimeoutStopSec=180
ExecStart=/usr/bin/geth --datadir /var/lib/geth --metrics --http --ws --authrpc.jwtsecret /var/lib/geth/jwt 

[Install]
WantedBy=default.target